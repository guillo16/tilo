    <p style="color: grey;"><%= @category.title %></p>
    <h3></h3>
   <% division_title =  @category.division.title %>
   <% category_links = @categories.filter { |category| category.division.title == division_title } %>
   <% category_links.each do |g| %>
   <%= link_to category_path(g) do  %>

   <p><%= g.title %></p>
   <% end %>
   <% end %>
 </div>

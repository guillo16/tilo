<%= render 'shared/navbar' %>
<div class="sing-up-wrapper">
  <div class="sing-up-container">
    <div class="text-center">
      <hr class="hr-text" data-content="Editar Usuario">
    </div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <div class="d-none">
        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
      </div>
      <p>Email</p>
      <%= current_user.email %>
      <br><br>
      <p>Nombre</p>
      <%= f.input :name,
      required: true,
      autofocus: true,
      input_html: { autocomplete: "nombre", class: "form-control form-control" }, label: false %>
      <p>Dirección</p>
      <%= f.input :address,
      required: true,
      autofocus: true,
      input_html: { autocomplete: "nombre", class: "form-control form-control" }, label: false %>
      <p>Teléfono</p>
      <%= f.input :phone,
      required: true,
      autofocus: true,
      input_html: { autocomplete: "nombre", class: "form-control form-control" }, label: false %>
      <p>Ciudad</p>
      <%= f.input :city,
      required: true,
      autofocus: true,
      input_html: { autocomplete: "nombre", class: "form-control form-control" }, label: false %>

      <p>Nueva contraseña</p>
      <%= f.input :password,
      hint: "Dejar en blanco si no queres cambiar la contraseña",
      required: false,
      label: false,
      input_html: { autocomplete: "new-password" } %>
      <p>Confirmar contraseña</p>
      <%= f.input :password_confirmation,
      required: false,
      label: false,
      input_html: { autocomplete: "new-password" } %>
      <p>Contraseña actual</p>
      <%= f.input :current_password,
      hint: "necesitamos tu contraseña actual para realizar los cambios",
      required: true,
      label: false,
      input_html: { autocomplete: "current-password" } %>
      <div class="form-actions mt-1">
        <%= f.button :submit, "Confirmar Cambios", class: 'btn btn-product btn-block' %>
      </div>
      <% end %>
      <div class=" text-center mt-3">
        <p> Queres eliminar la cuenta? <%= link_to "Eliminar mi cuenta", registration_path(resource_name), data: { confirm: "Estas seguro? si eliminas tendras que volver a crear una para compar" }, method: :delete %></p>
        <br>
        <%= link_to "Volver", :back, class: "btn btn-dark" %>
      </div>
    </div>
  </div>
</div>


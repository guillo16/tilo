<%= render 'shared/navbar' %>
<div class="division-banner d-flex align-items-center justify-content-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @division.photo %>');">
  <div>
    <h2><%= @division.title %></h2>
  </div>
</div>
<div class="division-wrapper">
  <section id="category-list">
    <div class="categories-list">
      <div class="d-none d-md-block">
        <h2>Categorias:</h2>
      </div>
      <% @division.categories.each do |category| %>
      <p><%= link_to category.title , category_path(category)  %></p>
      <% end %>
    </div>
  </section>
  <section id="division-product-container">
    <div class="division-container">
      <% @products.uniq(&:title).each do |product| %>
      <%= render 'shared/cards', product: product %>
      <% end %>

    </div>
    <div class="text-center">
      <%= paginate @products %>
    </div>
  </section>
</div>
<%= render 'shared/footer' %>


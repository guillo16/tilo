<div class="search-navbar">
    <div class="text-center">
      <%= link_to root_path, class: 'navbar-brand' do  %>
      <img src="https://res.cloudinary.com/dw7ox75dg/image/upload/v1591298249/LogosTilo-04_1.png" alt="" style="width: 120px; height: 62px; object-fit: cover;">
      <% end %>
    </div>
    <div class="exit-search">
      <%= link_to :back  do %>
      <i class="fas fa-times"></i>
      <% end %>
    </div>
  </div>
<div class="search-container">
  <div class="search-form">
    <%= form_tag products_search_path,  method: :get  do %>
    <div class="form-inline">
      <%= text_field_tag :query,
      params[:query],
      class: "form-inline search-input",
        placeholder: "Buscar"
        %>
        <input type="submit" value="&#xf002" class="fas fa-search btn-search">
      </div>
      <% end %>
    </div>
    <div class="text-center pt-5 search-footer">
      <h2>NAVEGA POR CATEGORIAS</h2>
      <% @divisions.each do |division| %>
      <p><%= link_to division.title.upcase, division_path(division) %></p>
      <% end %>
    </div>
  </div>

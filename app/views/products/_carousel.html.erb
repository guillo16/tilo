<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @product.photos.first(1).each_with_index do |photo, index| %>
    <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="active"></li>
    <% end %>
    <% @product.photos.drop(1).each_with_index do |photo, index| %>
    <li data-target="#carouselExampleIndicators" data-slide-to="<%= index + 1 %>"></li>
    <% end %>
  </ol>
  <div class="carousel-inner">
    <% @product.photos.first(1).each do |photo| %>
    <div class="carousel-item active">
      <%= cl_image_tag photo.key %>
    </div>
    <% end %>
    <% @product.photos.drop(1).each do |photo| %>
    <div class="carousel-item">
      <%= cl_image_tag photo.key %>
    </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

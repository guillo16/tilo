<h1>Products#index</h1>
<p>Find me in app/views/products/index.html.erb</p>
<div class="container text-center">
    <h2>Productos </h2>
    <table class="table table-striped table-bordered ">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Nombre</th>
          <th scope="col">Stock</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
        <tr>
          <th><%= product.title%></th>
          <th><%= product.stock%></th>
          <td><%= link_to 'Editar', edit_product_path(product)  %> </td>
          <td><%= link_to 'Eliminar', product_path(product),  method: :delete,  data: { confirm: 'Are you sure?' }  %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="pt-3">
      <%= link_to 'Crear Producto', new_product_path, class: 'btn btn-primary btn-block' %>
      <br>
      <%= link_to 'Volver', :back, class: 'btn btn-danger btn-block' %>
    </div>
  </div>

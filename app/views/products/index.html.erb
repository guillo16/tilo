<%= render 'shared/navbar' %>
<div class="product-stock-wrapper">
  <div class="index-filters text-center d-md-flex justify-content-around">
    <p><%= link_to "ORDENAR POR PRECIO", products_path(price_cents: :desc), class: 'btn btn-dark' %></p>
    <p> <button type="button" class="btn btn-product" data-toggle="modal" data-target="#exampleModalLong">
      FILTRAR POR CATEGORIA
    </button></p>
  </div>
  <table class="table table-striped table-bordered text-center">
    <thead class="thead-dark">
      <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Stock</th>
        <th>Categoria</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= product.stock%></td>
        <td><%= product.category.title %></td>

        <td><%= link_to 'Editar', edit_product_path(product)  %> </td>
        <td><%= link_to 'Eliminar', product_path(product),  method: :delete,  data: { confirm: 'Are you sure?' }  %> </td>
        <td><%= link_to 'Ver', product_path(product) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="p-3">
    <%= link_to 'Crear Producto', new_product_path, class: 'btn btn-primary btn-block' %>
    <br>
    <%= link_to 'Volver', :back, class: 'btn btn-danger btn-block' %>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Categorias</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% @categories.each do |category| %>
        <p><%= link_to category.title , products_path(category_id: category.id) %></p>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-dark btn-lg btn-block" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
